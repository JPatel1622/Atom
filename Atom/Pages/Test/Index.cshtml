@page
@model Atom.Pages.Test.IndexModel
@{
    ViewData["Title"] = "Test";
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container">
    <div class="row">
        <div class="col-4">
            <form method="post">
                <div class="container">
                    <div class="row">
                        <label class="col-12 text-info">Login User</label>
                        <div class="col-12">
                            <i class="fa-solid fa-envelope"></i>
                            <label asp-for="EmailAddress" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="EmailAddress" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-12">
                            <i class="fa-solid fa-key"></i>
                            <label asp-for="Password" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" asp-page-handler="LoginUser" class="mt-1">Submit</button>
                        </div>

                    </div>
                </div>
            </form>

            @if (Model.UserModel != null)
            {
                <div class="card">
                    <div class="container m-0 p-0">
                        <div class="card-header">
                            <div class="row">
                                <label class="text-success">User Found!</label>
                            </div>
                        </div>

                        <div class="card-body">

                            <div class="row">
                                <label class="text-success" asp-for="UserModel.EmailAddress"></label>
                            </div>

                            <div class="row">
                                <label class="text-info">@Model.UserModel.EmailAddress</label>
                            </div>

                            <div class="row">
                                <label class="text-success" asp-for="UserModel.FirstName"></label>
                            </div>

                            <div class="row">
                                <label class="text-info">@Model.UserModel.FirstName</label>
                            </div>

                            <div class="row">
                                <label class="text-success" asp-for="UserModel.LastName"></label>
                            </div>

                            <div class="row">
                                <label class="text-info">@Model.UserModel.LastName</label>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <label class="text-warning container mt-3">No User Found</label>
            }
        </div>

        <div class="col-4">
            <form method="post">
                <div class="container">
                    <div class="row">
                        <label class="col-12 text-info">Create New User</label>
                        <div class="col-12">
                            <i class="fa-solid fa-envelope"></i>
                            <label asp-for="NewUser.EmailAddress" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="NewUser.EmailAddress" />
                            <span asp-validation-for="NewUser.EmailAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <i class="fa-solid fa-key"></i>
                            <label asp-for="NewUser.Password" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="NewUser.Password" />
                            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label asp-for="NewUser.FirstName" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="NewUser.FirstName" />
                            <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label asp-for="NewUser.LastName" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="NewUser.LastName" />
                            <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label asp-for="NewUser.UserName" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="NewUser.UserName" />
                            <span asp-validation-for="NewUser.UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" asp-page-handler="CreateNewUser" class="mt-1">Create New User</button>
                        </div>

                    </div>
                </div>
            </form>
        </div>


        <div class="col-4">
            <form method="post">
                <div class="container">
                    <div class="row">
                        <label class="col-12 text-info">Update Found User</label>
                        <div class="col-12">
                            <i class="fa-solid fa-envelope"></i>
                            <label asp-for="FoundUser.EmailAddress" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="FoundUser.EmailAddress" />
                            <span asp-validation-for="FoundUser.EmailAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <i class="fa-solid fa-key"></i>
                            <label asp-for="FoundUser.Password" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="FoundUser.Password" />
                            <span asp-validation-for="FoundUser.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label asp-for="FoundUser.FirstName" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="FoundUser.FirstName" />
                            <span asp-validation-for="FoundUser.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label asp-for="FoundUser.LastName" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="FoundUser.LastName" />
                            <span asp-validation-for="FoundUser.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label asp-for="FoundUser.UserName" class="mb-0 mt-1"></label>
                        </div>
                        <div class="col-12">
                            <input asp-for="FoundUser.UserName" />
                            <span asp-validation-for="FoundUser.UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <input hidden asp-for="FoundUser.UserGuid" />

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" asp-page-handler="UpdateUser" class="mt-1">Update Found User</button>
                        </div>

                    </div>
                </div>
            </form>
        </div>



        <div class="container">
            <div class="row">
                <form method="post">
                    <div class="container mt-5">
                        <button type="submit" asp-page-handler="GetAllUsers">Get All Users</button>
                    </div>
                </form>

            </div>

            <div class="row">

                @if (Model.ManyUsers != null && Model.ManyUsers.Any())
                {
                    <div class="card">
                        <div class="container m-0 p-0">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-3">
                                        <label asp-for="UserModel.UserGuid"></label>
                                    </div>
                                    <div class="col-2">
                                        <label asp-for="UserModel.FirstName"></label>
                                    </div>
                                    <div class="col-2">
                                        <label asp-for="UserModel.LastName"></label>
                                    </div>
                                    <div class="col-2">
                                        <label asp-for="UserModel.UserName"></label>
                                    </div>
                                    <div class="col-3">
                                        <label asp-for="UserModel.EmailAddress"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">
                                @foreach (var user in Model.ManyUsers)
                                {
                                    <div class="row">
                                        <div class="col-3">
                                            <label>@user.UserGuid</label>
                                        </div>
                                        <div class="col-2">
                                            <label>@user.FirstName</label>
                                        </div>
                                        <div class="col-2">
                                            <label>@user.LastName</label>
                                        </div>
                                        <div class="col-2">
                                            <label>@user.UserName</label>
                                        </div>
                                        <div class="col-3">
                                            <label>@user.EmailAddress</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <form method="post">
        @if (Model.UpdateManyUsers != null && Model.UpdateManyUsers.Any())
        {
            <h1>Update Many Users</h1>
            <div class="card">
                <div class="container m-0 p-0">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-3">
                                <label asp-for="UserModel.EmailAddress"></label>
                            </div>
                            <div class="col-3">
                                <label asp-for="UserModel.FirstName"></label>
                            </div>
                            <div class="col-3">
                                <label asp-for="UserModel.LastName"></label>
                            </div>
                            <div class="col-3">
                                <label asp-for="UserModel.UserName"></label>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        @for (int i = 0; i < Model.UpdateManyUsers.Count(); i++)
                        {
                            <div class="row">
                                <div class="col-3">
                                    <input asp-for="UpdateManyUsers[i].EmailAddress" />
                                    <span asp-validation-for="UpdateManyUsers[i].EmailAddress" class="text-danger"></span>
                                </div>
                                <div class="col-3">
                                    <input asp-for="UpdateManyUsers[i].FirstName" />
                                    <span asp-validation-for="UpdateManyUsers[i].FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-3">
                                    <input asp-for="UpdateManyUsers[i].LastName" />
                                    <span asp-validation-for="UpdateManyUsers[i].LastName" class="text-danger"></span>
                                </div>
                                <div class="col-3">
                                    <input asp-for="UpdateManyUsers[i].UserName" />
                                    <span asp-validation-for="UpdateManyUsers[i].UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <input hidden asp-for="UpdateManyUsers[i].UserGuid">
                        }
                    </div>
                </div>
            </div>
            <button type="submit" asp-page-handler="UpdateAllUsers">Update All Users</button>

        }
    </form>
</div>